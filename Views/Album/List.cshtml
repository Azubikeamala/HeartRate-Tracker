@model IEnumerable<AlbumApp.Entities.Album>

<h2>Album List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Artist</th>
            <th>Rating</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var album in Model)
        {
            <tr>
                <td>@album.Title</td>
                <td>@album.Artist</td>
                <td>@album.Rating</td>
                <td>
                    <a href="@Url.Action("Details", "Album", new { id = album.Id })">Details</a> |
                    <a href="@Url.Action("Edit", "Album", new { id = album.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", "Album", new { id = album.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Album")" class="btn btn-primary">Add New Album</a>
