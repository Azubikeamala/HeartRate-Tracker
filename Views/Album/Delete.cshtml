@model AlbumApp.Entities.Album

<h2>Delete Album</h2>

<div>
    <h4>Are you sure you want to delete this album?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Artist</dt>
        <dd class="col-sm-10">@Model.Artist</dd>

        <dt class="col-sm-2">Rating</dt>
        <dd class="col-sm-10">@Model.Rating</dd>

        <dt class="col-sm-2">Songs</dt>
        <dd class="col-sm-10">@Model.Songs</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="List" class="btn btn-secondary">Cancel</a>
    </form>
</div>

