@model IEnumerable<AlbumApp.Entities.Album>

<h2>Albums List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Artist</th>
            <th>Rating</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var album in Model)
        {
            <tr>
                <td>@album.Title</td>
                <td>@album.Artist</td>
                <td>@album.Rating</td>
                <td>
                    <a href="@Url.Action("Details", "Album", new { id = album.Id })">Details</a> |
                    <a href="@Url.Action("Edit", "Album", new { id = album.Id })">Edit</a> |

                    <form asp-action="DeleteConfirmed" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@album.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Album")" class="btn btn-primary">Add New Album</a>
