@model IEnumerable<AlbumApp.Entities.Album>

<h2>All Albums</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Artist</th>
            <th>Rating</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var album in Model)
        {
            <tr>
                <td>@album.DisplayText</td>
                <td>@album.Artist</td>
                <td>@album.Rating</td>
                <td>
                    <a href="@Url.Action("Details", "Album", new { id = album.Id })">Details</a> |
                    <a href="@Url.Action("Edit", "Album", new { id = album.Id })">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Album")" class="btn btn-primary">Add New Album</a>
